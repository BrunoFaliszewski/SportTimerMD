NavigationLayout:
    Manager:
        id: manager
        SetTime:
            name: "settime"
            id: SetTime
            sets: sets
            workMinutes: workMinutes
            workSeconds: workSeconds
            restMinutes: restMinutes
            restSeconds: restSeconds
            exerciseName: exerciseName

            BoxLayout:
                orientation: "vertical"

                MDToolbar:
                    title: "Sport Timer"
                    elevation: 10
                    left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]
                
                ScrollView:
                    GridLayout:
                        cols: 1
                        size_hint_y: None
                        height: self.minimum_height

                        MDTextField:
                            id: Title
                            mode: "fill"
                            hint_text: "Title"
                            size_hint_y: None
                        
                        MDTextField:
                            id: exerciseName
                            mode: "fill"
                            hint_text: "Exercise Name"
                            size_hint_x: .9
                            size_hint_y: None
                            pos_hint: {"center_x": .5}

                        MDLabel:
                            text: "Sets"
                            halign: "center"
                            size_hint_y: None
                            height: self.texture_size[1]
                        
                        BoxLayout:
                            orientation: "horizontal"
                            size_hint_y: None
                            
                            MDIconButton:
                                icon: "arrow-left-drop-circle-outline"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.primary_color
                                on_release: root.ids.SetTime.DecreaseNumberOfSets()

                            MDTextField:
                                id: sets
                                mode: "rectangle"
                                text: "0"

                            MDIconButton:
                                icon: "arrow-right-drop-circle-outline"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.primary_color
                                on_release: root.ids.SetTime.IncreaseNumberOfSets()
                    
                        MDLabel:
                            text: "Work"
                            halign: "center"
                            size_hint_y: None
                            height: self.texture_size[1]
                        
                        BoxLayout:
                            orientation: "horizontal"
                            size_hint_y: None
                            
                            MDIconButton:
                                icon: "arrow-left-drop-circle-outline"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.primary_color
                                on_release: root.ids.SetTime.DecreaseNumberOfWorkMinutes()

                            MDTextField:
                                id: workMinutes
                                mode: "rectangle"
                                text: "0"

                            MDIconButton:
                                icon: "arrow-right-drop-circle-outline"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.primary_color
                                on_release: root.ids.SetTime.IncreaseNumberOfWorkMinutes()

                            MDIconButton:
                                icon: "arrow-left-drop-circle-outline"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.primary_color
                                on_release: root.ids.SetTime.DecreaseNumberOfWorkSeconds()

                            MDTextField:
                                id: workSeconds
                                mode: "rectangle"
                                text: "0"

                            MDIconButton:
                                icon: "arrow-right-drop-circle-outline"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.primary_color
                                on_release: root.ids.SetTime.IncreaseNumberOfWorkSeconds()

                        MDLabel:
                            text: "Rest"
                            halign: "center"
                            size_hint_y: None
                            height: self.texture_size[1]

                        BoxLayout:
                            orientation: "horizontal"
                            size_hint_y: None
                            
                            MDIconButton:
                                icon: "arrow-left-drop-circle-outline"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.primary_color
                                on_release: root.ids.SetTime.DecreaseNumberOfRestMinutes()

                            MDTextField:
                                id: restMinutes
                                mode: "rectangle"
                                text: "0"

                            MDIconButton:
                                icon: "arrow-right-drop-circle-outline"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.primary_color
                                on_release: root.ids.SetTime.IncreaseNumberOfRestMinutes()

                            MDIconButton:
                                icon: "arrow-left-drop-circle-outline"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.primary_color
                                on_release: root.ids.SetTime.DecreaseNumberOfRestSeconds()

                            MDTextField:
                                id: restSeconds
                                mode: "rectangle"
                                text: "0"

                            MDIconButton:
                                icon: "arrow-right-drop-circle-outline"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.primary_color
                                on_release: root.ids.SetTime.IncreaseNumberOfRestSeconds()

                        BoxLayout:
                            orientation: "horizontal"
                            size_hint_y: None

                            MDFlatButton:
                                text: "Save"
                                on_release: root.ids.SetTime.SavePressed()

                            MDFlatButton:
                                text: "Reset"
                                on_release: root.ids.SetTime.ResetPressed()

                            MDFlatButton:
                                text: "Add"
                                on_release: root.ids.SetTime.AddPressed()

                        MDFlatButton:
                            text: "Start"
                            on_release:
                                manager.current = "training"
                                manager.transition.direction = "left"
                            size_hint_y: None
        Training:
            id: Training
            name: "training"

            BoxLayout:
                orientation: "vertical"

                MDToolbar:
                    title: "Training"
                    elevation: 10
                    left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]

                MDLabel:
                    text: root.ids.Training.names
                
                MDLabel:
                    text: root.ids.Training.seconds
        
        MySets:
            id: MySets
            name: "mysets"

    MDNavigationDrawer:
        id: nav_drawer

        BoxLayout:
            orientation: "vertical"

            ScrollView:
                MDList:
                    OneLineListItem:
                        text: "Set Time"
                        on_release:
                            manager.current = "settime"
                            manager.transition.direction = "right"
                    
                    OneLineListItem:
                        text: "My Sets"
                        on_release:
                            manager.current = "mysets"
                            manager.transition.direction = "right"
